{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerSteering TUI",
            "type": "debugpy",
            "request": "launch",
            "module": "powersteering.cli",
            // "args": ["${workspaceFolder}/assets/rsf"],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "--tb=short"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}
